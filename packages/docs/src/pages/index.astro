---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <header class="navbar sticky container-lg">
    <h1 class="navbar-title">
      Linwood Style
    </h1>
    <nav class="navbar-items">
      <a class="btn secondary" href="#button">Button</a>
      <a class="btn secondary" href="#hero">Hero</a>
      <a class="btn secondary" href="#list">List</a>
      <a class="btn secondary" href="#input">Input</a>
      <div class="h-divider"></div>
      <a class="btn secondary" href="https://github.com/LinwoodDev/style">GitHub</a>
    </nav>
  </header>
  <div class="container-lg">
    <div class="big-section">
      <h2>Installation</h2>
      <p>To use Linwood Style, use:</p>
      <code>npm install @linwooddev/style</code>
    </div>
    <div id="typo" class="big-section">
      <h2>Typography</h2>
      <h1 class="title">Title</h1>
      <h2 class="subtitle">Subtitle</h2>
      <h3 class="section-title">Section title</h3>
      <h1>Heading 1</h1>
      <h2>Heading 2</h2>
      <h3>Heading 3</h3>
      <h4>Heading 4</h4>
      <h5>Heading 5</h5>
      <h6>Heading 6</h6>
      <p>
        Paragraph text. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
    </div>
    <div id="button" class="big-section">
      <h2>Button</h2>
      <a href="#">Default link</a>
      <a href="#" class="btn">Button</a>
      <a href="#" class="btn primary">Primary</a>
      <a href="#" class="btn secondary">Secondary</a>
      <h3>Active</h3>
      <a href="#" class="btn active">Button</a>
      <a href="#" class="btn active primary">Primary</a>
      <a href="#" class="btn active secondary">Secondary</a>
    </div>
    <div id="hero" class="big-section">
      <h2>Hero</h2>
      <div class="hero">
        <h3 class="hero-title">Hero title</h3>
        <p class="hero-description">Hero subtitle</p>
      </div>
    </div>
    <div id="list" class="big-section">
      <h2>List</h2>
      <ul class="col gap-sm">
        <li>
          <a class="btn full primary" href="#">
            <p class="list-item-title">Item 1</p>
            <p class="list-item-description">Item 1 description</p>
          </a>
        </li>
        <li>
          <a href="#" class="btn full secondary">
            <p class="list-item-title">Item 2</p>
            <p class="list-item-description">Item 2 description</p>
          </a>
        </li>
        <li class="v-divider">
        </li>
        <li>
          <a href="#" class="btn full">
            <p class="list-item-title">Item 3</p>
            <p class="list-item-description">Item 3 description</p>
          </a>
        </li>
        <li>
          <p class="list-item-title">Item 4</p>
          <p class="list-item-description">Item 4 description</p>
        </li>
      </ul>
    </div>
    <div id="card" class="big-section">
      <h2>Card</h2>
      <ul class="row justify-center wrap gap-xl">
        <li>
          <a class="card primary" href="#">
            <p class="list-item-title">Item 1</p>
            <p class="list-item-description">Item 1 description</p>
          </a>
        </li>
        <li>
          <a href="#" class="card secondary">
            <p class="list-item-title">Item 2</p>
            <p class="list-item-description">Item 2 description</p>
          </a>
        </li>
        <li>
          <a href="#" class="card">
            <p class="list-item-title">Item 3</p>
            <p class="list-item-description">Item 3 description</p>
          </a>
        </li>
      </ul>
    </div>
    <div id="input" class="big-section">
      <h2>Input</h2>
      <input type="text" placeholder="Input" />
      <div class="form-group">
        <label for="input">Label</label>
        <input type="text" id="input" />
      </div>
      <div class="form-group">
        <label for="input">Number</label>
        <input type="number" id="input" />
      </div>
      <div class="form-group">
        <input type="checkbox" id="scales" name="scales" checked />
        <label for="scales">Scales</label>
      </div>
    </div>
  </div>
</Layout>
